# Set default behavior to automatically normalize line endings
* text=auto

# Force text files to be LF
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Force binary files to be CRLF
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Force these files to be LF
package.json eol=lf
package-lock.json eol=lf
yarn.lock eol=lf
